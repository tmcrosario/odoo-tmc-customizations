<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">

    <record id="db_backup_daily"
            model="db.backup">
        <field name="days_to_keep">30</field>
        <field name="name">Daily</field>
        <field name="recurrence">daily</field>
    </record>

    <record id="db_backup_monthly"
            model="db.backup">
        <field name="days_to_keep">365</field>
        <field name="name">Monthly</field>
        <field name="recurrence">monthly</field>
    </record>

    <record id="db_backup_hourly"
            model="db.backup">
        <field name="days_to_keep">1</field>
        <field name="name">Hourly</field>
        <field name="recurrence">hourly</field>
    </record>

</odoo>
